{
    "window.title": "${dirty}${activeEditorLong}${separator}${separator} profile: ${profileName}${separator} repo: ${activeRepositoryName}",
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.empty.hint": "hidden",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBorder": "#34495d",
        "list.inactiveSelectionBackground": "#213148",
    },
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "vsicons.dontShowNewVersionMessage": true,
    "fsdeploy.deployOnSave": true,
    "fsdeploy.nodes": [
        {
            "source": "${workspaceFolder}/src/",
            "target": "C:/Python313/Lib/site-packages/rivLib/",
            "include": "**/*.*",
            "exclude": ".vscode",
            "deleteTargetOnDeploy": true,
            "name": "4790k"
        }
    ],
    "projectManager.git.baseFolders": [
        "c:\\git"
    ],
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
    },
    "python.defaultInterpreterPath": "c:\\Python313\\python.exe",
    "python.terminal.executeInFileDir": true,
    "python.analysis.autoFormatStrings": true,
    "python.languageServer": "Pylance",
    "seito-openfile.searchSubFoldersOfWorkspaceFolders": [],
    "seito-openfile.openNewTab": true,
    "seito-openfile.searchPaths": [],
    "seito-openfile.notFoundTriggerQuickOpen": false,
    "rewrap.wrappingColumn": 80,
    "rewrap.wholeComment": false,
    "terminal.integrated.scrollback": 5000,
    "outline.showStrings": false,
    "actionButtons": {
        "reloadButton": "♻️",
        "defaultColor": "#ff0034",
        "loadNpmCommands": false,
        "commands": [
            {
                "name": "ToggleSpell",
                "color": "green",
                "useVsCodeApi": true,
                "command": "cSpell.toggleEnableSpellChecker",
            },
            {
                "name": "RuffImports",
                "color": "red",
                "useVsCodeApi": true,
                "command": "ruff.executeOrganizeImports",
            },
            {
                "name": "FoldAll",
                "color": "orange",
                "useVsCodeApi": true,
                "command": "editor.foldAll"
            },
            {
                "name": "UnFold",
                "color": "orange",
                "useVsCodeApi": true,
                "command": "editor.unfoldAll"
            },
            {
                "name": "FoldRegions",
                "color": "orange",
                "useVsCodeApi": true,
                "command": "editor.foldAllMarkerRegions",
            },
            {
                "name": "FoldX",
                "color": "orange",
                "useVsCodeApi": true,
                "command": "editor.foldAllExcept"
            },
            {
                "name": "UnFoldRecursive",
                "color": "orange",
                "useVsCodeApi": true,
                "command": "editor.unfoldRecursively"
            },
            {
                "name": "ToggleDocStr",
                "color": "orange",
                "useVsCodeApi": true,
                "command": "extension.toggleDocstrings"
            },
            {
                "name": "GitHubPage",
                "color": "yellow",
                "useVsCodeApi": true,
                "command": "extension.github_page"
            },
            {
                "name": "ExplorerSort",
                "color": "yellow",
                "useVsCodeApi": true,
                "command": "extension.toggleExplorerSortOrder",
            },
        ]
    },
    "ShortcutMenuBar.beautify": false,
    "ShortcutMenuBar.showCommands": true,
    "ShortcutMenuBar.navigateBack": false,
    "ShortcutMenuBar.navigateForward": false,
    "ShortcutMenuBar.commentLine": true,
    "ShortcutMenuBar.toggleWordWrap": true,
    "ShortcutMenuBar.openSettings": true,
    "git.autofetch": false,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.postCommitCommand": "sync",
    "git.autoStash": true,
    "githubRepositories.indexing.verboseDownloadNotification": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "explorer.sortOrder": "type",
    "settings.cycle": [
        {
            "id": "explorerSort2", // must be unique
            "overrideWorkspaceSettings": false,
            "values": [
                {
                    "explorer.sortOrder": "name"
                },
                {
                    "explorer.sortOrder": "type"
                },
                {
                    "explorer.sortOrder": "modified"
                }
            ]
        }
    ],
    "editor.rulers": [
        {
            "column": 4,
            "color": "#3d3d3d"
        },
        {
            "column": 80,
            "color": "#3d3d3d"
        }
    ],
    "editor.codeLens": false,
    "editor.parameterHints.cycle": false,
    "editor.hover.enabled": false,
    "editor.tabCompletion": "on",
    "editor.minimap.enabled": false,
    "editor.inlayHints.enabled": "off",
    "editor.suggest.showTypeParameters": false,
    "editor.parameterHints.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.guides.indentation": false,
    "editor.mouseWheelZoom": true,
    "editor.fontSize": 16,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSave": true,
    "editor.wordWrapColumn": 80,
    "editor.stickyScroll.enabled": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "cSpell.userWords": [
        "buildable",
        "rivt",
        "autonumber",
        "Codespace",
        "rivtcalc",
        "sympy",
    ],
    "cSpell.enabled": false,
}