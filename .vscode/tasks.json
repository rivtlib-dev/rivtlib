{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "lintpy",
        "type": "shell",
        "command": "autopep8 -i ${file}",
        "windows": {
          "command": "autopep8 -i ${file}"
        },
        "presentation": {
          "reveal": "silent",
          "revealProblems": "onProblem",
          "panel": "new",
          "close": true
        }
      },
    ],
    "inputs": [
      {
        "id": "rvsearch",
        "description": "rivt+search+terms:",
        "default": "beam",
        "type": "promptString"
      },
    ]
  }
